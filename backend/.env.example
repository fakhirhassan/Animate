# AniMate Flask Backend Environment Variables
# Copy this file to .env and fill in your values

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-change-in-production

# Server Configuration
PORT=5000
HOST=0.0.0.0

# CORS Configuration (comma-separated list of allowed origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# File Upload Configuration
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=104857600

# Model Configuration
MODEL_WEIGHTS_PATH=models/two_d_to_three_d/model_weights
ENABLE_GPU=true

# JWT Authentication (future use)
JWT_SECRET_KEY=jwt-secret-key-change-in-production
JWT_ACCESS_TOKEN_EXPIRES=3600

# Database Configuration (future use)
DATABASE_URL=sqlite:///dev_animate.db
# For PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/animate_db

# AWS S3 Configuration (optional, for cloud storage)
USE_S3_STORAGE=false
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=your-bucket-name
AWS_S3_REGION=us-east-1

# External API Keys (future integrations)
OPENAI_API_KEY=your-openai-api-key
ELEVENLABS_API_KEY=your-elevenlabs-api-key

# Redis Configuration (for async task processing)
REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=DEBUG

# Rate Limiting
API_RATE_LIMIT=100 per hour
